{
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 4,
    "arrowParens": "always",
    "endOfLine": "lf",
    "printWidth": 120,
    "importOrder": [
        "^[next]",
        "^[react]",
        "<THIRD_PARTY_MODULES>",
        "^@/pages",
        "^@/services",
        "^@(?!/)",
        "^@/modules",
        "^@/features",
        "^@/widgets",
        "^@/shared",
        "^@/ui",
        "^~/icons",
        "^[./]",
        "^~.css"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importTypeOrder": "before",
    "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"]
}
